<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Election.ElectionFragment">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/election"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nvsp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/eleBt"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="National voter's services portal"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/officialwebsite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="election Official Website"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/searchname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/eleBt"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="Search Name in Voter List"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/registervoter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="Register as new voter"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/voterservice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/eleBt"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="Voter Services"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/policparty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="candidate/political party"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/downloadelectrol"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/eleBt"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="Download electrol roll"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/election"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="election"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/publication"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/eleBt"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="publication"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/currentissues"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:pointerIcon="zoom_out"
                android:text="current issues"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>