<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adminpannel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Adminpannel">
        <activity android:name=".ui.Profile.Profile"></activity>
        <activity android:name=".ui.News.DetailedNews" />
        <activity android:name=".FullImageView" />
        <activity android:name=".ui.VoterData.VoterFullDetails" />
        <activity android:name=".ui.Users.UserFullDetails" />
        <activity android:name=".ui.Users.CreateUser" />
        <activity android:name=".ui.AdminData.NewAdmin" />
        <activity
            android:name=".MainadminActivity"
            android:label="@string/title_activity_mainadmin"
            android:theme="@style/Theme.Adminpannel.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>